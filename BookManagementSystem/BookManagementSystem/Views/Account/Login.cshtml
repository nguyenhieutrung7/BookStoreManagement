@using Model.Resources
@model Model.ViewModels.LoginVM

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link href="~/Assets/vendors/bootstrap-4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Assets/vendors/jquery-3.3.1/js/jquery-3.3.1.min.js"></script>

    <link href="~/Assets/css/style.css" rel="stylesheet" />
    <!-- Bootstrap JS -->
    <script src="~/Assets/vendors/bootstrap-4.3.1/js/bootstrap.min.js"></script>

    <script src="~/Assets/js/main.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="card text-center col-lg-5 centered">
            <div class="col-8 offset-2 border-bottom padding-top">
                <h5 class="float-left text-success">@Login.Login_Title</h5>
            </div>
            <div class="card-body">
                <form id="login-form" class="needs-validation" action="/Account/Login" method="post" novalidate>
                    <div class="form-group">
                        <input type="text" class="form-control" id="accountname" name="accountname" placeholder="@Login.Account_Name" alt="Account Name" required  autofocus/>
                        <div class="invalid-feedback">
                            @Login.Invalid_Account_Name
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="password" name="password" placeholder="@Login.Password" alt="Password" required/>
                        <div class="invalid-feedback">
                            @Login.Invalid_Password
                        </div>
                    </div>
                    <div class="col-12">
                        @Html.ValidationMessage("", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" alt="Remember Login">
                            <label class="form-check-label">@Login.Remember_Me</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary col-6" type="submit">@Login.Login_Button</button>
                    </div>
                    <div class="form-group">
                        <a href="#" class="text-muted"><u>@Login.Forgot_Password</u></a>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            window.validate();
        });
    </script>
</body>
</html>