@model Model.Models.Publisher
@using Model.Resources;
@*Modal edit account*@

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@PublisherLG.EditPub: @Model.PublisherName</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form id="publisher-create-form" class="needs-validation" action="javascript:editPublisher();" novalidate>
    <div class="modal-body">
        <div class="form-group">
            <label class="col-form-label" for="publisher-name">
                @PublisherLG.PublisherName:
            </label>
            <input type="text" class="form-control" id="publisher-name-edit" value="@Model.PublisherName" alt="Publisher Name" required pattern=".{5,50}" />
            <input type="text" id="publisher-id-edit" value="@Model.PublisherID" hidden alt="Publisher ID" />
            <div class="valid-feedback">@PublisherLG.Lookgood!</div>
            <div class="invalid-feedback">@PublisherLG.ValPubName</div>
        </div>
        <div class="form-group">
            <label class="col-form-label" for="publisher-phone-edit">
                @PublisherLG.PublisherPhone:
            </label>
            <input type="number" class="form-control" id="publisher-phone-edit" value="@Model.PublisherPhone" alt="Publisher Phone Number" required min="99999999" max="10000000000000" />
            <div class="valid-feedback">@PublisherLG.Lookgood!</div>
            <div class="invalid-feedback">@PublisherLG.ValPubPhone</div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">@PublisherLG.Edit</button>
        <button type="reset" class="btn btn-outline-dark">@PublisherLG.Reset</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">@PublisherLG.Close</button>
    </div>
</form>

@*Javascript Trung Publisher Edit*@
<script src="~/Assets/js/trungjs/trung_publisher_edit.js"></script>

