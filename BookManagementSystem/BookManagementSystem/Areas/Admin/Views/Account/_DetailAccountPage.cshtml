@model Model.ViewModels.AccountInfoVM
@using Model.Resources;
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@AccountLG.DetailAcc: @Model.SiteOwnerName</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form method="post">
        <div class="form-row border-top">
            <div class="col">
                <label class="col-form-label" for="account-name">
                    @AccountLG.AccountName:
                </label>
                <input type="text" class="form-control" value="@Model.AccountName" id="account-name" alt="Account Name" readonly />
            </div>
            <div class="col">
                <label class="col-form-label col-sm-4" for="password">
                    @AccountLG.Password:
                </label>
                    <input type="password" class="form-control" value="@Model.Password" id="password" alt="Password" readonly />
            </div>
        </div>
        <div class="form-row border-top">
            <div class="col">
                <label class="col-form-label" for="siteowner-name">
                    @AccountLG.SiteOwnerName:
                </label>
                <input type="text" class="form-control" value="@Model.SiteOwnerName" alt="Site Owner Name" id="siteowner-name" readonly/>
            </div>
            <div class="col">
                <label class="col-form-label" for="gender">
                    @AccountLG.Gender:
                </label>
                @if (ViewBag.Gender == "Male")
                {
                    <input type="text" class="form-control" value="@AccountLG.Male" alt="Gender" id="gender" readonly />
                }
                else
                {
                    <input type="text" class="form-control" value="@AccountLG.Female" alt="Gender" id="gender" readonly />
                }

            </div>
        </div>
        <div class="form-row border-top">
            <div class="col">
                <label class="col-form-label" for="siteowner-email">
                    Email :
                </label>
                <input type="text" class="form-control" value="@Model.SiteOwnerEmail" alt="Site Owner Email" id="siteowner-email" readonly/>
            </div>
            <div class="col">
                <label class="col-form-label" for="siteowner-phonenumber">
                    @AccountLG.Phone:
                </label>
                <input type="text" class="form-control" value="@Model.SiteOwnerPhoneNumber" alt="Site Owner Phone Number" id="siteowner-phonenumber" readonly/>
            </div>
        </div>
        <div class="form-row border-top">
            <div class="col">
                <label class="col-form-label" for="siteowner-address">
                    @AccountLG.Address:
                </label>
                <input type="text" class="form-control" value="@Model.SiteOwnerAddress" alt="Site Owner Address"id="siteowner-address" readonly/>
            </div>
        </div>
        <div class="form-row border-top">
            <div class="col">
                <label class="col-form-label" for="created-date">
                    @AccountLG.CreateDate :
                </label>
                <input type="text" class="form-control" value="@ViewBag.CreatedDate" id="created-date" readonly/>
            </div>
        </div>
        <div class="form-row border-top">
            <div class="col">
                <label class="col-form-label" for="modifired-date">
                    @AccountLG.ModifiedDate :
                </label>
                <input type="text" class="form-control" value="@ViewBag.ModifiredDate" id="modifired-date" readonly/>
            </div>
        </div>
        <div class="form-row border-top">
            <div class="col">
                <label class="col-form-label" for="role">
                    @AccountLG.Role:
                </label>
                <input type="text" class="form-control" value="@AccountLG.SiteOwner" id="role" readonly/>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@AccountLG.Close</button>
</div>
