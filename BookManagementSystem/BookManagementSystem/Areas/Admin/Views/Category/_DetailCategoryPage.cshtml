
@model Model.Models.Category
@using Model.Resources;
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@CategoryLG.DelCat: @Model.CategoryName</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form method="post">
        <div class="form-row border-top">
            <div class="col">
                <label class="col-form-label" for="category-name">
                    @CategoryLG.CategoryName:
                </label>
                <input type="text" class="form-control" value="@Model.CategoryName" id="category-name" readonly/>
            </div>
        </div>
        <div class="form-row border-top">
            <div class="col">
                <label class="col-form-label" for="category-description">
                    @CategoryLG.CategoryDes:
                </label>
                <textarea class="form-control" id="category-description-edit" required minlenght="20" maxlength="300" rows="5" alt="Category Description" readonly>@Model.Description</textarea>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@CategoryLG.Close</button>
</div>

